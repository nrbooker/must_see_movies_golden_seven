<h1> Movies Database </h1>
<a href="http://localhost:3000/movies/new">Add A New Movie</a>

<table>
<tr>
  <th>Image</th>
  <th>Title</th>
  <th>Year</th>
  <th>Duration</th>
  <th>Description</th>

</tr>
<% @list_of_movies.each do |movie| %>
<tr>
<td><img src="<%= movie.image_url %>" width="80"></td>
<td><%= movie.title %></td>
<td><%= movie.year %></td>
<td><%= movie.duration %></td>
<td><%= movie.description %></td>

<td><a href="http://localhost:3000/movies/<%= movie.id %>">Show</a></td>
<td><a href="http://localhost:3000/movies/<%= movie.id %>/edit">Edit</a></td>
<td><a href="http://localhost:3000/delete_movie/<%= movie.id %>">Delete</a></td>
</tr>

<% end %>
</table>
